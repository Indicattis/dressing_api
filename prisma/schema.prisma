// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  //COLUMNS
  id              String @id @default(uuid())
  client_name     String
  client_number   String @unique
  client_password String
  client_mail     String @unique
  client_age      Int

  //DEFAULT COLUMNS
  createdAt DateTime @default(now())

  //RELATIONS ENDPOINT
  requisicao Requisicao[]

  //TABLE NAME
  @@map("DRESSING_CLIENTES")
}

model Colaborador {
  id             String @id @default(uuid())
  colab_name     String
  colab_number   String @unique
  colab_password String
  colab_mail     String @unique
  colab_age      Int
  colab_level    Int

  createdAt DateTime @default(now())

  //RELATIONS ENDPOINT
  requisicao Requisicao[]

  @@map("DRESSING_COLABORADORES")
}

model Requisicao {
  id           Int     @id @default(autoincrement())
  req_services String
  req_duration BigInt
  req_price    Decimal @db.Decimal(10, 2)
  req_status   Boolean @default(false)
  req_client   String
  req_colab    String?

  //RELATIONS
  cliente     Cliente      @relation(fields: [req_client], references: [id])
  colaborador Colaborador? @relation(fields: [req_colab], references: [id])

  //DEFAULT COLUMNS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("DRESSING_REQS")
}

model Service {
  id               Int     @id @default(autoincrement())
  serv_description String
  serv_price       Decimal @db.Decimal(10, 2)
  serv_duration    Int
}
